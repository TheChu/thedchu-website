{
  "compilerOptions": {
    "lib": ["dom", "dom.Iterable", "esnext", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "target": "es2015",
    "types": ["node", "cypress", "@testing-library/cypress"]
  },
  "include": ["./**/*.ts"]
}
